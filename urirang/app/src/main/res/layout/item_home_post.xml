<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="360:47"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_home_post_iv_mbti"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/home_description"
            android:src="@drawable/ic_mbti_15_esfj_unselected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_home_post_tv_nickname"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:letterSpacing="0.06"
            android:maxLength="5"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_home_post_iv_mbti"
            app:layout_constraintTop_toTopOf="@+id/item_home_post_iv_mbti"
            tool:text="닉네임sk" />

        <TextView
            android:id="@+id/item_home_post_tv_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:letterSpacing="0.06"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/item_home_post_iv_mbti"
            app:layout_constraintTop_toBottomOf="@+id/item_home_post_tv_nickname"
            tool:text="8/25" />

        <TextView
            android:id="@+id/item_home_post_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="9sp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/item_home_post_tv_nickname"
            app:layout_constraintTop_toTopOf="@+id/item_home_post_tv_nickname"
            tool:text="애니어그램 6번이랑 ISFJ 관계썽 말해보장asdasdasdasdass" />

        <ImageView
            android:id="@+id/item_home_post_iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/home_description"
            android:src="@drawable/ic_like"
            app:layout_constraintStart_toStartOf="@+id/item_home_post_tv_title"
            app:layout_constraintTop_toBottomOf="@+id/item_home_post_tv_title" />

        <TextView
            android:id="@+id/item_home_post_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="9sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_post_iv_like"
            app:layout_constraintStart_toEndOf="@+id/item_home_post_iv_like"
            app:layout_constraintTop_toTopOf="@+id/item_home_post_iv_like"
            tool:text="35" />

        <TextView
            android:id="@+id/item_home_post_tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:letterSpacing="0.06"
            android:textColor="@android:color/black"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_post_iv_like"
            app:layout_constraintStart_toEndOf="@+id/item_home_post_tv_like"
            app:layout_constraintTop_toTopOf="@+id/item_home_post_iv_like"
            tool:text="조회수 156" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>