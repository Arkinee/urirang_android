<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="198dp"
    android:layout_height="213dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_home_with_you_card"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_marginTop="6dp"
        android:elevation="0dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toTopOf="@+id/fragment_home_with_you_iv_highlight">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/src_gradient"
            android:elevation="2dp" />

        <ImageView
            android:id="@+id/fragment_home_with_you_iv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/home_description"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fragment_home_with_you_tv_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/src_home_tv_round_back"
        android:elevation="3dp"
        android:paddingStart="6.5dp"
        android:paddingTop="3dp"
        android:paddingEnd="6.5dp"
        android:paddingBottom="2dp"
        android:text="@string/home_tv_with_you"
        android:textColor="@android:color/white"
        android:textSize="9.5sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_home_with_you_tv_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_home_with_you_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:elevation="3dp"
        android:lineSpacingExtra="9sp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_home_with_you_tv_people_participate"
        app:layout_constraintStart_toStartOf="parent"
        tool:text="가장 손절 잘하는\n유형은 무엇?" />

    <TextView
        android:id="@+id/fragment_home_with_you_tv_people_participate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="13dp"
        android:elevation="3dp"
        android:text="@string/home_tv_with_you"
        android:textColor="@android:color/white"
        android:textSize="9.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tool:text="115명 참여중" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:elevation="3dp"
        android:src="@drawable/ic_angle_bracket_white"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_home_with_you_tv_people_participate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_home_with_you_tv_people_participate" />

    <ImageView
        android:id="@+id/fragment_home_with_you_iv_highlight"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/home_description"
        android:elevation="2dp"
        android:src="@drawable/ic_highlight_neoheerang"
        app:layout_constraintStart_toStartOf="@+id/fragment_home_with_you_card"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>