<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_with_you_comment_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_with_you_comment_iv_mbti"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:contentDescription="@string/with_you"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_mbti_1_intj_selected" />

        <TextView
            android:id="@+id/item_with_you_comment_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:letterSpacing="0.06"
            android:textColor="@color/colorBasicBlack98"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_with_you_comment_iv_mbti"
            app:layout_constraintTop_toTopOf="@+id/item_with_you_comment_iv_mbti"
            tools:text="닉네임" />

        <TextView
            android:id="@+id/item_with_you_comment_tv_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorBasicBlack40"
            android:textSize="8.5sp"
            app:layout_constraintStart_toEndOf="@+id/item_with_you_comment_tv_nickname"
            app:layout_constraintTop_toTopOf="@+id/item_with_you_comment_iv_mbti"
            tools:text="8/25 12:01" />

        <ImageView
            android:id="@+id/item_with_you_comment_iv_new"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3.9dp"
            android:contentDescription="@string/with_you"
            android:src="@drawable/ic_new"
            app:layout_constraintStart_toEndOf="@+id/item_with_you_comment_tv_created_at"
            app:layout_constraintTop_toTopOf="@+id/item_with_you_comment_iv_mbti" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_with_you_comment_constraint_speech_bubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_with_you_comment_iv_mbti"
            app:layout_constraintTop_toBottomOf="@+id/item_with_you_comment_tv_nickname">


            <ImageView
                android:id="@+id/item_with_you_comment_iv_speech_bubble"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@string/with_you"
                android:scaleType="fitXY"
                android:src="@drawable/ic_speech_bubble"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_with_you_comment_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="7.9dp"
                android:ellipsize="end"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/colorBasicBlack83"
                android:textSize="11sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="ESTP가 찐임; 뭔가 안맞는다" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/item_with_you_comment_tv_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:letterSpacing="0.06"
            android:paddingStart="5dp"
            android:paddingTop="5.1dp"
            android:paddingBottom="5.1dp"
            android:text="@string/with_you_tv_write_comment"
            android:textColor="@color/colorInfoBorder34"
            android:textSize="8.5sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/item_with_you_comment_linear_like"
            app:layout_constraintEnd_toStartOf="@+id/item_with_you_comment_linear_like"
            app:layout_constraintTop_toTopOf="@+id/item_with_you_comment_linear_like" />

        <LinearLayout
            android:id="@+id/item_with_you_comment_linear_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="5.1dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_with_you_comment_constraint_speech_bubble">

            <ImageView
                android:id="@+id/item_with_you_comment_iv_like"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/with_you"
                android:src="@drawable/ic_liked_false" />

            <TextView
                android:id="@+id/item_with_you_comment_tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBasicBlack27"
                android:textSize="9sp"
                android:textStyle="bold"
                tools:text="35" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_with_you_comment_rv"
            android:layout_width="0dp"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_with_you_comment_constraint_speech_bubble"
            app:layout_constraintTop_toBottomOf="@+id/item_with_you_comment_linear_like"
            tools:listitem="@layout/item_with_you_comment_by_comment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>