<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/my_posts_iv_back_arrow"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:contentDescription="@string/my_posts"
        android:onClick="myPostsOnClick"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/my_posts_view_border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorInfoBorder"
        app:layout_constraintTop_toBottomOf="@+id/my_posts_iv_back_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_posts"
        android:textColor="#090909"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_posts_iv_back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_posts_iv_back_arrow" />

    <TextView
        android:id="@+id/my_posts_tv_num_of_posts_wording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/my_posts_tv_num_of_posts"
        android:textColor="@color/colorBasicBlack92"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_posts_view_num_of_posts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_posts_view_num_of_posts" />

    <TextView
        android:id="@+id/my_posts_tv_num_of_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorHotPink"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/my_posts_tv_num_of_posts_wording"
        app:layout_constraintStart_toEndOf="@+id/my_posts_tv_num_of_posts_wording"
        app:layout_constraintTop_toTopOf="@+id/my_posts_tv_num_of_posts_wording"
        tools:text="12" />

    <View
        android:id="@+id/my_posts_view_num_of_posts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorHomeBorder"
        app:layout_constraintDimensionRatio="360:43"
        app:layout_constraintTop_toBottomOf="@+id/my_posts_view_border" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_posts_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_posts_view_num_of_posts"
        tools:listitem="@layout/item_my_posts" />

</androidx.constraintlayout.widget.ConstraintLayout>