<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="198dp"
    android:layout_height="213dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_home_hall_of_fame_card"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_marginTop="6dp"
        android:elevation="0dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/src_gradient"
            android:elevation="2dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_hall_of_fame_card_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="1.5dp"
                android:layout_marginBottom="1.5dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintBottom_toTopOf="@+id/fragment_home_hall_of_fame_card_3"
                app:layout_constraintEnd_toStartOf="@+id/fragment_home_hall_of_fame_card_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fragment_home_hall_of_fame_iv_main_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/home_description"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_hall_of_fame_card_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="1.5dp"
                android:layout_marginBottom="1.5dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintBottom_toTopOf="@+id/fragment_home_hall_of_fame_card_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_hall_of_fame_card_1"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fragment_home_hall_of_fame_iv_main_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/home_description"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_hall_of_fame_card_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="1.5dp"
                android:layout_marginEnd="1.5dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fragment_home_hall_of_fame_card_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_hall_of_fame_card_1">

                <ImageView
                    android:id="@+id/fragment_home_hall_of_fame_iv_main_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/home_description"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_hall_of_fame_card_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="1.5dp"
                android:layout_marginTop="1.5dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_hall_of_fame_card_3"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_hall_of_fame_card_2">

                <ImageView
                    android:id="@+id/fragment_home_hall_of_fame_iv_main_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/home_description"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fragment_home_hall_of_fame_tv_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/src_home_tv_round_back"
        android:elevation="3dp"
        android:paddingStart="6.5dp"
        android:paddingTop="3dp"
        android:paddingEnd="6.5dp"
        android:paddingBottom="2dp"
        android:text="@string/home_tv_hall_of_fame"
        android:textColor="@android:color/white"
        android:textSize="9.5sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_home_with_you_tv_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_home_with_you_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="9dp"
        android:elevation="3dp"
        android:lineSpacingExtra="9sp"
        android:text="@string/home_tv_hall_of_fame_wording"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:elevation="3dp"
        android:src="@drawable/ic_angle_bracket_white"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_home_with_you_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_home_with_you_tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>