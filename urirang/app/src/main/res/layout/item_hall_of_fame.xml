<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_hall_of_fame_constraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="360:107"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_hall_of_fame_card"
            android:layout_width="110dp"
            android:layout_height="83dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/item_hall_of_fame_iv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/hall_of_fame_description"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_hall_of_fame_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="9sp"
            android:maxLines="2"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/item_hall_of_fame_card"
            app:layout_constraintTop_toTopOf="@+id/item_hall_of_fame_card"
            tool:text="소름돋게 잘맞는\n유형별 조합asdasdasadasd!" />

        <ImageView
            android:id="@+id/item_hall_of_fame_iv_mbti"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="17dp"
            android:contentDescription="@string/hall_of_fame_description"
            app:layout_constraintBottom_toBottomOf="@+id/item_hall_of_fame_card"
            app:layout_constraintStart_toEndOf="@+id/item_hall_of_fame_card"
            tool:src="@drawable/ic_mbti_1_intj_selected" />

        <TextView
            android:id="@+id/item_hall_of_fame_tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorBasicBlack98"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_hall_of_fame_iv_mbti"
            app:layout_constraintStart_toEndOf="@+id/item_hall_of_fame_iv_mbti"
            app:layout_constraintTop_toTopOf="@+id/item_hall_of_fame_iv_mbti"
            tool:text="닉네임" />

        <TextView
            android:id="@+id/item_hall_of_fame_tv_selected_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:letterSpacing="0.06"
            android:textColor="@color/colorBasicBlack40"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_hall_of_fame_iv_mbti"
            app:layout_constraintStart_toEndOf="@+id/item_hall_of_fame_tv_nick"
            app:layout_constraintTop_toTopOf="@+id/item_hall_of_fame_iv_mbti"
            tool:text="8/25" />

        <TextView
            android:id="@+id/item_hall_of_fame_tv_comment_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:letterSpacing="0.06"
            android:text="@string/hall_of_fame_tv_comment"
            android:textColor="@color/colorBasicBlack98"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_hall_of_fame_iv_mbti"
            app:layout_constraintStart_toEndOf="@+id/item_hall_of_fame_tv_selected_at"
            app:layout_constraintTop_toTopOf="@+id/item_hall_of_fame_iv_mbti" />

        <TextView
            android:id="@+id/item_hall_of_fame_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:letterSpacing="0.06"
            android:textColor="@color/colorBasicBlack27"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_hall_of_fame_iv_mbti"
            app:layout_constraintStart_toEndOf="@+id/item_hall_of_fame_tv_comment_word"
            app:layout_constraintTop_toTopOf="@+id/item_hall_of_fame_iv_mbti"
            tool:text="145" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>