<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/src_bottom_sheet_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bottom_sheet_how_about_this_iv_close"
        android:layout_width="50.3dp"
        android:layout_height="42dp"
        android:contentDescription="@string/mbti_filter_description"
        android:paddingStart="19.3dp"
        android:paddingTop="9dp"
        android:paddingEnd="19.3dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_close_filtering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_sheet_how_about_this_view_border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="7.1dp"
        android:background="@color/colorInfoBorder23"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_how_about_this_iv_close" />

    <TextView
        android:id="@+id/bottom_sheet_how_about_this_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10.9dp"
        android:layout_marginEnd="20dp"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="7sp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_how_about_this_view_border"
        tools:text="어벤져스 캐릭터 MBTI 궁예 해봅시다" />

    <ImageView
        android:id="@+id/bottom_sheet_how_about_this_iv_mbti"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:contentDescription="@string/how_about_this"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_how_about_this_tv_title"
        tools:src="@drawable/ic_mbti_1_intj_selected" />

    <TextView
        android:id="@+id/bottom_sheet_how_about_this_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:letterSpacing="0.06"
        android:textColor="@color/colorBasicBlack98"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_how_about_this_iv_mbti"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_how_about_this_iv_mbti"
        tools:text="닉네임" />

    <TextView
        android:id="@+id/bottom_sheet_how_about_this_tv_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorBasicBlack40"
        android:textSize="8.5sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_how_about_this_iv_mbti"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_how_about_this_iv_mbti"
        tools:text="8/25 12.01" />

    <ImageView
        android:id="@+id/bottom_sheet_how_about_this_iv_new"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="3dp"
        android:contentDescription="@string/how_about_this"
        android:src="@drawable/ic_new"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_how_about_this_tv_created_at"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_how_about_this_tv_created_at"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_how_about_this_tv_created_at" />

    <ImageView
        android:id="@+id/bottom_sheet_how_about_this_iv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/how_about_this"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="360:245"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_how_about_this_iv_mbti"
        tools:src="@mipmap/ic_launcher" />

    <View
        android:id="@+id/bottom_sheet_how_about_this_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="360:55"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_how_about_this_iv_main" />

    <ImageView
        android:id="@+id/bottom_sheet_how_about_this_iv_like"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="21dp"
        android:contentDescription="@string/how_about_this"
        android:src="@drawable/ic_like"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_how_about_this_view_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_how_about_this_view_bottom" />

    <TextView
        android:id="@+id/bottom_sheet_how_about_this_tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:letterSpacing="0.04"
        android:textColor="@color/colorBasicBlack59"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_how_about_this_iv_like"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_how_about_this_iv_like"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_how_about_this_iv_like"
        tools:text="63" />

    <LinearLayout
        android:id="@+id/bottom_sheet_how_about_this_linear_send_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/src_how_about_this_like_corner"
        android:paddingStart="9dp"
        android:paddingTop="3dp"
        android:paddingEnd="9dp"
        android:paddingBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_how_about_this_view_bottom"
        app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_how_about_this_view_bottom"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_how_about_this_view_bottom">

        <ImageView
            android:id="@+id/bottom_sheet_how_about_this_iv_send_like"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/how_about_this"
            android:src="@drawable/ic_liked_false" />

        <TextView
            android:id="@+id/bottom_sheet_how_about_this_tv_send_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textStyle="bold"
            android:textColor="@color/colorBasicBlack40"
            android:text="@string/how_about_this_tv_like" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>